@model List<Property>
@{
    ViewData["Title"] = "Home Page";
}

<h1>Properties</h1>

<form asp-action="Index" method="get">
    <div class="form-actions no-color">
        <p>
            Find by name: <input type="text" name="SearchString" value="@ViewData["CurrentFilter"]" />
            <input type="submit" value="Search" class="btn btn-default" /> |
            <a asp-action="Index">Back to Full List</a>
        </p>
    </div>
</form>

@if (Model != null)
{
    <table class="table">
        <tr>
            <th>
                Suburb
            </th>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewData["NameSortParm"]" asp-route-currentFilter="@ViewData["CurrentFilter"]">City</a>
            </th>
            <th>
                Province
            </th>
            <th>
                About
            </th>
            <th>
                ERF Size
            </th>
            <th>
                Parking Spaces
            </th>
            <th>
                Bathrooms
            </th>
            <th>
                Bedrooms
            </th>
            <th>
                Agent
            </th>
        </tr>
        @foreach (var property in Model)
        {
            if (property != null)
            {
                <tr>
                    <td>
                        @property.Suburb
                    </td>
                    <td>
                        @property.City
                    </td>
                    <td>
                        @property.Province
                    </td>
                    <td>
                        @property.About
                    </td>
                    <td>
                        @property.ERFSize
                    </td>
                    <td>
                        @property.ParkingSpaces
                    </td>
                    <td>
                        @property.Bathrooms
                    </td>
                    <td>
                        @property.Bedrooms
                    </td>
                    <td>
                        <a asp-controller="Agent" asp-action="Index" asp-route-AgentId="@property.AgentId">@property.Agent.FirstName @property.Agent.LastName</a>
                    </td>
                    <td>
                        <a asp-controller="Home" asp-action="Detail" asp-route-PropertyId="@property.PropertyId">Details</a>
                    </td>
                </tr>
            }
        }
    </table>
}
else
{
    <p>@ViewBag.Message</p>
}
